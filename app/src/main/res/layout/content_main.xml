<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/item_top_bar" />

    <Button
        android:id="@+id/main_activity_vertical_list_view_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="垂直ListView形式" />

    <Button
        android:id="@+id/main_activity_honrizontal_list_view_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="水平ListView形式" />

    <Button
        android:id="@+id/main_activity_grid_view_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="GridView形式" />
    <Button
        android:id="@+id/main_activity_strag_grid_view_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="StragGridView形式" />


</LinearLayout>
